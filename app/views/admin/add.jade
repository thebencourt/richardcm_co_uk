extends layout.jade

block meta
  title Add Item

block title
  h1 Add Item

block content
  .row
    .col-xs-12
      form(action="/admin", method="post", role="form")
        .form-group
          label(for="title") Title
          input(type="text", name="title", class="form-control", placeholder="Title")
        .form-group
          label(for="category") Category
          input(type="text", name="category", class="form-control", placeholder="Category")
        .form-group
          label(for="banner") Banner
          input(type="url", name="banner", class="form-control", placeholder="Banner URL")
        .form-group
          label(for="skills") Skills
          input(type="text", name="skills", class="form-control", placeholder="Skills")
          span.help-block Separate skills with a comma (eg: Skill 1, Skill 2)
        .form-group
          label(for="image1") Image 1
          input(type="url", name="image1", class="form-control", placeholder="Image 1 URL")
        .form-group
          button(id="addBtn", type="button", class="btn btn-default")
            span.glyphicon.glyphicon-plus
            &nbsp;
            span Add Another Image
        .form-group
          label(for="description") Description
          textarea(name="description", class="form-control", placeholder="Description")
          input(type="hidden", name="images")
          button(id="saveBtn", type="button", class="btn btn-primary") Save

block scripts
  script(src="/public/js/admin.min.js")
