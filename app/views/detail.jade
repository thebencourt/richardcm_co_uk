extends layout.jade

block meta
  - var shortDesc = item.description.substr(0, 156);
  title #{item.title} | Environment Artist | Richard CM
  meta(name="description", content="#{shortDesc}")
  meta(name="keywords", content="#{item.skills}")

block title
  h1= item.title

block content
  img(src="#{item.banner}", alt="#{item.title}", class="item__banner")
  h3 Skills
  ul.item__skills
    - var skillsList = item.skills.split(', ');
    for skill in skillsList
      li= skill
  h3 Description
  p= item.description
  - var imgList = item.images.split(',');
  for image in imgList
    img(src="#{image}", alt="#{item.title}", class="item__image")
